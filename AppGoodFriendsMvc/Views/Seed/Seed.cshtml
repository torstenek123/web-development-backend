@model SeedModel
@{
    ViewData["Title"] = "Seed";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<!-- Page Seed -->
<div class="container px-4 py-4" id="seed">
    <h2 class="pb-2 border-bottom">Seed friends</h2>

    <p>
        Current the database contains @Model.NrOfFriends friends. Reseed according to the number of items you want.
        You may optionally remove the old data before seeding.
    </p>

    <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        <div class="col-md-7 col-lg-8">
            <form class="needs-validation" method="post" novalidate asp-controller="Seed">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="nrItems" class="form-label">Number of items</label>
                        <input asp-for="NrOfItems" type="text" class="form-control" id="nrItems" placeholder="" value="@Model.NrOfItems">
                        <span asp-validation-for="NrOfItems" class="invalid-feedback"></span>
                        
                        <label for="removeSeeds" class="form-check-label" >Clear before seeding</label>
                        <input asp-for="RemoveSeeds" class="form-check-input" type="checkbox" id="removeSeeds">
                        
                    </div>
                </div>
                <button class="w-100 btn btn-primary btn-lg my-4" type="submit" asp-action="Seeding">Seed</button>
            </form>
        </div>
    </div>
</div>

@section script
{
    <!-- -->
    <partial name="_ValidationScriptsPartial" />
}
